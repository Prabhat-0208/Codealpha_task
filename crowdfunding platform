  <style>
    body {
      margin: 0;
      font-family: 'Quicksand', sans-serif;
      background: linear-gradient(135deg, #ffdde1, #ee9ca7);
      color: #333;
      padding: 20px;
    }

    h1, h2 {
      text-align: center;
      color: #222;
    }

    .container {
      max-width: 1100px;
      margin: auto;
      background: #ffffffcc;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    input, textarea, button, select {
      width: 100%;
      padding: 12px;
      margin: 8px 0;
      border: none;
      border-radius: 8px;
      font-size: 1em;
    }

    input, textarea, select {
      background: #f7f7f7;
    }

    button {
      background: #ff6584;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #ff3366;
    }

    .project-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      margin-top: 30px;
      overflow: hidden;
      animation: fadeIn 0.5s ease-in-out;
    }

    .project-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .project-card-content {
      padding: 20px;
    }

    .progress-bar {
      background: #eee;
      border-radius: 10px;
      overflow: hidden;
      height: 20px;
      margin: 10px 0;
    }

    .progress-fill {
      height: 100%;
      background: #28a745;
      color: white;
      text-align: center;
      line-height: 20px;
    }

    .update-log {
      background: #f1f1f1;
      padding: 10px;
      border-radius: 8px;
      font-size: 0.9em;
      margin-top: 10px;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
